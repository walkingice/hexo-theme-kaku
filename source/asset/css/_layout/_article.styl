

article p, article table, article ol, article ul, article iframe, article dl
    margin-top: block-10
    margin-bottom: block-10

article li ol, article li ul
    margin-bottom: 0

article
    padding: gutter-large
    background-color: #FBFBFB
    font-size: article-font-size
    line-height: article-line-height
    color: article-font-color
    text-shadow: 0px 1px 0px #FFF
    a
        color: #B6AA60
    hr
        border:0
        height:1px
        background-color:#d4d4d4
        margin-top: gutter-def
        margin-bottom: gutter-def
    p
        margin-top: 1.2 * article-line-height
        margin-bottom: 1.2 * article-line-height
    .article-title
        margin-top: block-10 !important


.article-meta
    padding: gutter-large
    background-color: #FFF
    border-top: 1px solid #DDD
    color-tag = #F3F3F3
    .tag
        color: #888
        display: inline-block
        position: relative
        padding: 3px 5px 3px 5px
        margin: 5px 10px 5px 5px
        background: color-tag
        -webkit-border-radius: 0 5px 5px 0
        border-radius: 0 5px 5px 0
    .tag::before
        position: absolute
        width: 0px
        height: 0px
        content: " "
        left: -24px
        top: 0px
        border-right-color: color-tag !important
        border: 12px solid transparent
    .tag:hover
        color: #000
    span.group:first-child
        margin-left: 0px
    span.group
        margin-left: gutter-large


.content-photo
    margin-bottom: block-40

.content-meta
    margin-bottom: block-20
    padding-bottom: block-10
    font-size: 10px
    border-bottom: border-default
    text-align: right
    letter-spacing: 2px
    text-transform: uppercase

    span.meta-category:before
        content: "\2022"

.box-content-title
    margin-bottom: block-20
    font-size: 28px
    letter-spacing: 1px

.content
    overflow: hidden
    padding-bottom: block-20
    margin-bottom: block-10

    h1
        //text-transform: uppercase
        font-size: 28px
        margin-top: block-40
        margin-bottom: block-5

    h2
        border-bottom: border-default
        font-size: 24px
        padding-top: block-20
        padding-bottom: block-5

    h3
        //text-transform: uppercase
        font-size: 22px
        margin-top: block-10
        margin-bottom: block-10

    h4
        //text-transform: uppercase
        font-size: 20px
        margin-top: block-10
        margin-bottom: block-10


    h5
        //text-transform: uppercase
        font-size: 18px
        margin-top: block-10
        margin-bottom: block-10

    h6
        //text-transform: uppercase
        font-size: 16px
        margin-top: block-10
        margin-bottom: block-10


    blockquote
        font-style: italic
        font-size: 24px
        font-family: font-blockquote
        line-height: 1.2
        text-align: center
        border: border-dashed
        margin-top: block-10
        margin-bottom: block-10

    .pullquote
        text-align: left
        width: 45%
        margin: 0

        &.left
            margin-left: 0.5em
            margin-right: 1em
            float:left

        &.right
            margin-right: 0.5em
            margin-left: 1em
            float:right

.content-tag
    font-size: 10px
    text-align: right
    letter-spacing: 2px
    //text-transform: uppercase

    &:before
        content: "Tags: "

.content-nav
    letter-spacing: 2px
    text-transform: uppercase
    font-size: 10px
    text-align: right
    margin-top: block-60

    a
        color: color-default
        text-align: right

    a:hover
        color: color-link
