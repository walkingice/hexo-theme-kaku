
.box-archive-list
    margin: 0 auto

    //debug
    //border: 1px solid blue

    ul,ol
        padding-top: gutter-large
        padding-left: 0px
    box-border-style = solid 1px #DDD
    li
        padding-top: gutter-def
        padding-bottom: gutter-def
        padding-left: 10px
        padding-right: 10px
        background: #EEE
        border-top: box-border-style
        list-style-type: none
        margin-top: -1px
    li:last-child
        border-bottom: box-border-style
    li:hover
        background: white

.archive-item-title
    font-size: 1.2rem
    font-weight: bold
.archive-item-date
    //position
    position: relative
    float: right

.panel-archive-index-title
    margin-bottom: 40px


.box-archive-index
    margin: 0 auto
    width: 90%

    //debug
    //border: 1px solid blue



[class*='col-']
    float: left
    padding: 0 5px

    +:first-child
        padding: 0 5px 0 0

    +:last-child
        padding: 0 0 0 5px


.box-archive-index .col-1-3
    width: 32.333%

    h3
        border-bottom: border-default
        padding-bottom: block-10
        margin-bottom: block-20
        text-transform: uppercase
        font-size: font-small
        letter-spacing: 2px

    ul
        padding-left: 15px
        line-height: 2

.archive-list, .category-list, .tag-list
    .archive-list-link, .category-list-link, .tag-list-link
        font-size: 1.2rem
    .archive-list-count, .category-list-count, .tag-list-count
        position: relative
        display: inline-block
        min-width: 10px
        font-size: 12px
        border-radius: 10px
        line-height: 1rem
        color: #FFF
        background-color: #CCC
        padding: 3px 7px
        margin-left: gutter-def

